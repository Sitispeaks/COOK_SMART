<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">


    <!-- A CardView that contains a TextView -->
    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:elevation="16dp"
        card_view:cardCornerRadius="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_each_ingrs_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#acacac" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_ingr_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/pt_sans"
            android:gravity="center"
            android:text="A"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/ingr_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="5dp"
            android:fontFamily="@font/pt_sans"
            android:shadowColor="@color/dark_grey"
            android:shadowDx="2"
            android:shadowDy="0"
            android:shadowRadius="2"
            android:singleLine="true"
            android:text="watermelon"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_alert_add_ingr"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:background="@drawable/add_remove_back"
        android:paddingLeft="30dp"
        android:paddingTop="5dp"
        android:paddingRight="30dp"
        android:paddingBottom="5dp"
        android:text="Add"
        android:textSize="20sp" />

</LinearLayout>